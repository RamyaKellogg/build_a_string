<div class="page-header">
  <h1>
    Tubings
    <a href="/tubings/new" class="btn btn-lg btn-success">Create a New Tubing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Project Name</th>
        <th>Safety valve</th>
        <th>Packer</th>
        <th>Coupling</th>
        <th>Actions</th>
      </tr>

      <% @tubings.each do |tubing| %>
      <tr>
        <td><%= tubing.name %></td>
        <td><%= tubing.safety_valve.description %></td>
        <td><%= tubing.packer.description %></td>
        <td><%= tubing.coupling.description %></td>
        <td>
          <a href="/tubings/<%= tubing.id %>" class="btn btn-primary">Show</a>
          <a href="/tubings/<%= tubing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tubing/<%= tubing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
