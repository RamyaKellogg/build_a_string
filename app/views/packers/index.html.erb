<div class="page-header">
  <h1>
    Packers
    <a href="/packers/new" class="btn btn-lg btn-success">Add a New Packer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Size (Inch)</th>
        <th>Type</th>
        <th>Pressure Rating (PSI)</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @packers.each do |packer| %>
      <tr>
        <td><%= packer.size %></td>
        <td><%= packer.category %></td>
        <td><%= packer.pressure_rating %></td>
        <td><%= packer.description %></td>
        <td>
          <a href="/packers/<%= packer.id %>" class="btn btn-primary">Show</a>
          <a href="/packers/<%= packer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_packer/<%= packer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
