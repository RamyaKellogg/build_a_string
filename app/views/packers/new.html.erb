<!-- Validation failure messages -->
<% if @packer.errors.any? %>
  <% @packer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Packer</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_packer" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for size -->
      <div class="form-group">
        <label for="size" class="control-label">
          Size(Inch)
        </label>

        <%= select_tag( "size", options_for_select([ "3", "3.5", "4", "4.5", "5", "5.5" , "6" , "6.5", "7", "7.5","8" ],@packer.size),:class => "form-control") %>
      </div>

      <!-- Label and input for category -->
      <div class="form-group">
        <label for="category" class="control-label">
          Type
        </label>

        <%= select_tag( "category", options_for_select([ "Downhole", "Retrievable" , "Permanent" , "Sand Control" ],@packer.category),:class => "form-control") %>
      </div>

      <!-- Label and input for pressure_rating -->
      <div class="form-group">
        <label for="pressure_rating" class="control-label">
          Pressure Rating (PSI)
        </label>

        <%= select_tag( "pressure_rating", options_for_select([ "5000", "5500" , "6000" , "6500", "7000", "7500", "8000", "8500", "9000", "9500", "10000" ],@packer.pressure_rating),:class => "form-control") %>
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @packer.description %></textarea>
      </div>

      <button class="btn btn-success">
        Create Packer
      </button>
      or
      <a href="/packers">Cancel</a>
    </form>
  </div>
</div>
